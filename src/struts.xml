<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />

    <package name="default" namespace="/" extends="struts-default">
    	<action name="Show_stu" class="action.Show_stu"><!-- 主页面的搜索 -->
            <result>/WEB-INF/content/profile_stu</result>
        </action>
                
    	<action name="MainPageSearch" class="action.MainPageSearch"><!-- 主页面的搜索 -->
            <result>/WEB-INF/content/mainpage.jsp</result>
        </action>
        
        <action name="LoginAction" class="action.LoginAction"><!-- 登录过程的处理 -->
            <result name="success">/WEB-INF/content/mainpage.jsp</result>
            <result name="failed">/WEB-INF/content/loginpage.jsp</result>
        </action>

        <action name="*">
            <result>/WEB-INF/content/{1}.jsp</result>
        </action>
    </package>

</struts>
